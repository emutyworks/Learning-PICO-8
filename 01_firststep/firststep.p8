-- https://pico-8.fandom.com/wiki/GameLoop
-- _init(), _update(), _draw()
function _init()
	xpos = 64
	ypos = 64
	sp = 0
end

function _update()
	if (btn(0) and xpos > 0) then
		xpos -= 1
		sp = 3
	elseif (btn(1) and xpos < 127) then 
		xpos += 1
		sp = 1
	elseif (btn(2) and ypos > 0) then
		ypos -= 1
		sp = 0
	elseif (btn(3) and ypos < 127) then
		ypos += 1
		sp = 2
	end
end

function _draw()
	cls()
	rectfill(0,0,127,127,127)
	spr(sp, xpos, ypos)
end

